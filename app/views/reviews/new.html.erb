<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>Add a new review for <%= @restaurant.name %></h1>

      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
